{{#if error}}
  <p class="error">
    {{error}}
  </p>
{{else}}
  {{#unless foundShows}}
    <h2>Welcome to Tvmarks!</h2>
    <p>Tvmarks is a single user self hosted website that help you track the shows you are watching and catalog shows you have weatched.</p>
    <p>If you have just set this site up then it's working! Login to search for show to add.</p>
  {{/unless}}

  {{#if showsToWatch}}
    {{#if seeAllShowsToWatch}}
      <a href="/shows/watch-next" style="float:right;">see all</a>
    {{/if}}
    <h2>Watch Next</h2>
    <div style="margin-bottom: 50px;">
      <div style="display:flex; flex-wrap: wrap; gap: 0.5em;">
        {{#each showsToWatch }}
          {{> show_tvshow_card tvshow=this}}
        {{/each}}
      </div>
    </div>
  {{/if}}

  {{#if showsUpToDate}}
