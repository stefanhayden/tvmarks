<div data-id="{{episode.id}}" style="display: flex; gap: 15px; border-bottom: 1px solid; padding: 15px 5px; margin-bottom: 10px;">
  <div style="flex-shrink: 0;">
    <a href="/show/{{episode.show_id}}">
      <img
        src="{{episode.show_image}}"
        style="width: 80px; height: 113px; object-fit: cover; display: block;"
        alt="{{episode.show_name}}"
      />
    </a>
  </div>
  <div style="flex-grow: 1;">
    <div style="margin-bottom: 5px;">
      <strong>
        <a href="/show/{{episode.show_id}}">{{episode.show_name}}</a>
      </strong>
    </div>
    <div style="margin-bottom: 5px;">
      S{{episode.season}} {{#if episode.number}}| E{{episode.number}}{{/if}}
    </div>
    <div style="margin-bottom: 5px;">
      <a href="/show/{{episode.show_id}}/episode/{{episode.id}}">
        {{episode.name}}
      </a>
    </div>
    <div style="color: rgba(0, 0, 0, 0.5); font-size: 1.2em;">
      Airs: {{formatDate episode.airstamp}}
    </div>
  </div>
  <div style="flex-shrink: 0; display: flex; flex-direction: column; align-items: center; justify-content: center; min-width: 80px;">
    <div style="font-size: 3em; font-weight: bold; line-height: 1; color: rgba(0, 0, 0, 0.7);">
      {{episode.days_until}}
    </div>
    <div style="font-size: 0.9em; color: rgba(0, 0, 0, 0.5); text-align: center;">
      {{pluralize episode.days_until "day"}}
    </div>
  </div>
</div>
