<div class="search">
  <form action="/admin/update_show_data">
      <button>get new data</button>
  </form>
  <form action="/admin/update_show_data">
    <input type="hidden" name="force" value="true" />
    <button>FORCE: get new data</button>
  </form>
  <br />
  <hr />
  <br /> 
  
  <form action="/admin">
    <div class="form-group">
      <label for="query" class="visually-hidden">
        Query Shows
      </label>
      <input id="query" name="query" value="{{this.query}}" />
      <small>powered by <a href="https://www.tvmaze.com">tvmaze</a></small>
    </div>
    <div class="form-group">
      <button>Search tv</button>
    </div>
  </form>
</div>
{{#if error}}
  <p class="error">
    {{error}}
  </p>
{{else}}
  <div class="bookmarks">
    {{#each searchTv }}
      {{> search_tvshow tvshow=this.show }}
    {{/each}}
  </div>
{{/if}}
