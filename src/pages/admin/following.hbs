<form action="/admin/following/follow" method="POST">
  <div class="form-group">
    <label for="actor">
      Enter username to follow
    </label>
    <input
      type="text"
      id="actor"
      name="actor"
      placeholder="@updates@tvmarks.glitch.me"
    />
  </div>
  <div class="form-group">
    <button type="submit">
      Follow
    </button>
  </div>
</form>

{{#each following}}
  <div class="following">
    <div class="info">
      <a href="{{this}}">
        {{this}}
      </a>
    </div>
    <div class="actions">
      <form action="/admin/following/unfollow" method="POST">
        <input type="hidden" name="actor" value="{{this}}" />
        <button type="submit">Unfollow</button>
      </form>
    </div>
  </div>
{{/each}}
