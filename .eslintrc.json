{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "plugin:node/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "camelcase": "off",
    "no-nested-ternary": "off",
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages"
      }
    ]
  },
  "plugins": ["jest"]
}
